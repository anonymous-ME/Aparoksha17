<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.betterclever.aparoksha.activities.SplashActivity">

    <com.github.jorgecastillo.FillableLoader
        android:id="@+id/fillableLoader"
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:fl_originalWidth="400"
        app:fl_originalHeight="400"
        app:fl_strokeColor="@color/md_red_600"
        app:fl_fillColor="@color/md_red_400"
        app:fl_strokeWidth="4dp"
        app:fl_strokeDrawingDuration="2000"
        app:fl_fillDuration="2000"
        app:fl_clippingTransform="waves"
        app:fl_fillPercentage="100"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.13"/>

    <com.github.jorgecastillo.FillableLoader
        android:id="@+id/fillableLoader2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:fl_clippingTransform="squares"
        app:fl_fillColor="@color/md_white_1000"
        app:fl_fillDuration="2000"
        app:fl_fillPercentage="100"
        app:fl_originalHeight="200"
        app:fl_originalWidth="800"
        app:fl_strokeColor="@color/md_green_100"
        app:fl_strokeDrawingDuration="2000"
        app:fl_strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"/>
    
</android.support.constraint.ConstraintLayout>
